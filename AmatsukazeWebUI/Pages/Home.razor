@page "/info"
@using Amatsukaze.Shared
@inject IAmatsukazeApi Api

<h1>情報</h1>

@if (!string.IsNullOrEmpty(_summaryError))
{
    <p style="color: red;">@_summaryError</p>
}

<table class="info-table">
    <tr><th>Host</th><td>@GetSummaryValue(_summary?.HostName, _summaryLoading)</td></tr>
    <tr><th>Version</th><td>@GetSummaryValue(_summary?.Version, _summaryLoading)</td></tr>
    <tr>
        <th>Latest</th>
        <td>
            @if (_latestLoading)
            {
                <span>Loading...</span>
            }
            else if (!string.IsNullOrEmpty(_latestError))
            {
                <span>-</span>
            }
            else if (_latestRelease != null && !string.IsNullOrEmpty(_latestRelease.Tag) && !string.IsNullOrEmpty(_latestRelease.Url))
            {
                <a href="@_latestRelease.Url" target="_blank" rel="noopener noreferrer">@_latestRelease.Tag</a>
            }
            else
            {
                <span>-</span>
            }
        </td>
    </tr>
    <tr><th>Platform</th><td>@GetSummaryValue(_summary?.Platform, _summaryLoading)</td></tr>
</table>

<h2 class="info-section-title">ディスク</h2>
@if (_disksLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(_disksError))
{
    <p style="color: red;">@_disksError</p>
}
else if (_disks == null || _disks.Count == 0)
{
    <p>-</p>
}
else
{
    <table class="disk-table">
        <thead>
            <tr>
                <th>Path</th>
                <th class="disk-num">Free</th>
                <th class="disk-num">Total</th>
                <th class="disk-num">Used%</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var disk in _disks)
            {
                <tr>
                    <td>@(disk.Path ?? "-")</td>
                    <td class="disk-num">@FormatBytes(disk.FreeBytes)</td>
                    <td class="disk-num">@FormatBytes(disk.CapacityBytes)</td>
                    <td class="disk-num">@FormatPercent(disk.UsedRatio)</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private InfoSummaryView? _summary;
    private LatestReleaseInfo? _latestRelease;
    private List<DiskUsageView>? _disks;
    private string? _summaryError;
    private string? _latestError;
    private string? _disksError;
    private bool _summaryLoading = true;
    private bool _latestLoading = true;
    private bool _disksLoading = true;

    protected override async Task OnInitializedAsync()
    {
        _ = LoadSummaryAsync();
        _ = LoadLatestReleaseAsync();
        _ = LoadDisksAsync();
        await Task.CompletedTask;
    }

    private async Task LoadSummaryAsync()
    {
        var res = await Api.GetInfoSummaryAsync();
        if (!res.Ok)
        {
            _summaryError = res.Error ?? "Failed to load summary.";
            _summaryLoading = false;
            await InvokeAsync(StateHasChanged);
            return;
        }
        _summaryError = null;
        _summary = res.Data;
        _summaryLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadLatestReleaseAsync()
    {
        var res = await Api.GetLatestReleaseAsync();
        if (res.Ok && res.Data != null)
        {
            _latestRelease = res.Data;
        }
        else
        {
            _latestError = res.Error;
        }
        _latestLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadDisksAsync()
    {
        var res = await Api.GetInfoDisksAsync();
        if (!res.Ok)
        {
            _disksError = res.Error ?? "Failed to load disks.";
            _disksLoading = false;
            await InvokeAsync(StateHasChanged);
            return;
        }
        _disksError = null;
        _disks = res.Data ?? new List<DiskUsageView>();
        _disksLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private static string GetSummaryValue(string? value, bool loading)
        => loading ? "Loading..." : (string.IsNullOrWhiteSpace(value) ? "-" : value);

    private static string FormatBytes(long bytes)
    {
        const double unit = 1024.0;
        var size = Math.Max(0, (double)bytes);
        var suffix = "B";
        if (size >= unit)
        {
            size /= unit;
            suffix = "KiB";
        }
        if (size >= unit)
        {
            size /= unit;
            suffix = "MiB";
        }
        if (size >= unit)
        {
            size /= unit;
            suffix = "GiB";
        }
        if (size >= unit)
        {
            size /= unit;
            suffix = "TiB";
        }
        return $"{size:0.##} {suffix}";
    }

    private static string FormatPercent(double ratio)
    {
        var value = Math.Max(0.0, Math.Min(1.0, ratio));
        return $"{value * 100:0.#}%";
    }
}
