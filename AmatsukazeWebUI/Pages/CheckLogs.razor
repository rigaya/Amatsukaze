@page "/logs/check"
@using Amatsukaze.Shared
@inject IAmatsukazeApi Api

<h3>チェックログ</h3>

<p>
    <button class="btn btn-primary" @onclick="ReloadAsync" disabled="@_loading">Reload</button>
</p>

@if (_loading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(_error))
{
    <p style="color: red;">@_error</p>
}
else
{
    @if (_checkLogs.Count == 0)
    {
        <p>No check logs.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>開始</th>
                    <th>結果</th>
                    <th>メッセージ</th>
                    <th>プロファイル</th>
                    <th>入力</th>
                    <th>詳細</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _checkLogs)
                {
                    <tr>
                        <td>@(item.DisplayType ?? item.Type ?? "-")</td>
                        <td>@(item.DisplayEncodeStart ?? item.CheckStartDate.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                        <td>@(item.DisplayResult ?? (item.Success ? "成功" : "失敗"))</td>
                        <td>@(item.Reason ?? "-")</td>
                        <td>@(item.Profile ?? "-")</td>
                        <td>@(item.SrcPath ?? "-")</td>
                        <td><button class="btn btn-sm btn-outline-secondary" @onclick="() => LoadCheckDetailAsync(item)">View</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (_detailVisible)
    {
        <div class="log-overlay" @onclick="CloseDetail">
            <div class="log-overlay-panel" @onclick:stopPropagation="true">
                <button class="log-overlay-close" type="button" @onclick="CloseDetail">×</button>
                <h4>ログ詳細</h4>
                @if (_detailLoading)
                {
                    <p>Loading detail...</p>
                }
                else if (!string.IsNullOrEmpty(_detailError))
                {
                    <p style="color: red;">@_detailError</p>
                }
                else if (_detail == null)
                {
                    <p>Select a log to view detail.</p>
                }
                else
                {
                    <div>
                        <div>@_detailTitle</div>
                        <div>Size: @_detail.Meta?.Size @if (_detail.Meta?.TooLarge == true) { <span>(truncated)</span> }</div>
                        <pre class="log-detail">@(_detail.Content ?? "")</pre>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    private readonly List<CheckLogItemView> _checkLogs = new();
    private string? _error;
    private bool _loading = true;
    private LogFileContent? _detail;
    private string? _detailTitle;
    private string? _detailError;
    private bool _detailLoading;
    private bool _detailVisible;

    protected override Task OnInitializedAsync() => ReloadAsync();

    private async Task ReloadAsync()
    {
        _loading = true;
        _error = null;
        _checkLogs.Clear();

        var checkRes = await Api.GetCheckLogsAsync();
        if (!checkRes.Ok)
        {
            _error = checkRes.Error ?? "Failed to load check logs.";
        }
        else if (checkRes.Data != null)
        {
            _checkLogs.AddRange(checkRes.Data);
        }

        _loading = false;
    }

    private async Task LoadCheckDetailAsync(CheckLogItemView item)
    {
        await LoadDetailAsync(null, item.CheckStartDate, item.SrcPath ?? "Check Log");
    }

    private async Task LoadDetailAsync(DateTime? encodeStart, DateTime? checkStart, string title)
    {
        _detailLoading = true;
        _detailError = null;
        _detailTitle = title;
        _detail = null;
        _detailVisible = true;

        var res = await Api.GetLogFileAsync(encodeStart, checkStart);
        if (!res.Ok)
        {
            _detailError = res.Error ?? "Failed to load log detail.";
        }
        else
        {
            _detail = res.Data;
        }
        _detailLoading = false;
    }

    private void CloseDetail()
    {
        _detailVisible = false;
    }
}
