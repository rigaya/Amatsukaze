@page "/logs/check"
@using Amatsukaze.Shared
@using System.IO
@inject IAmatsukazeApi Api
@inject IJSRuntime Js

<h3>チェックログ</h3>

<p>
</p>

@if (_loading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(_error))
{
    <p style="color: red;">@_error</p>
}
else
{
    @if (_checkLogs.Count == 0)
    {
        <p>No check logs.</p>
    }
    else
    {
        <div class="log-list-container" @ref="_listRef" @onscroll="OnScrollAsync">
            <table class="table log-table">
                <thead>
                    <tr>
                        <th class="log-col-type">Type</th>
                        <th class="log-col-start">開始</th>
                        <th class="log-col-result">結果</th>
                        <th class="log-col-message">メッセージ</th>
                        <th class="log-col-profile">プロファイル</th>
                        <th class="log-col-input">入力</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in _checkLogs)
                    {
                        <tr class="log-row-clickable" @onclick="() => LoadCheckDetailAsync(item)">
                            <td class="log-col-type">@(item.DisplayType ?? item.Type ?? "-")</td>
                            <td class="log-col-start">@(item.DisplayEncodeStart ?? item.CheckStartDate.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                            <td class="log-col-result">@(item.DisplayResult ?? (item.Success ? "成功" : "失敗"))</td>
                            <td class="log-col-message">@(item.Reason ?? "-")</td>
                            <td class="log-col-profile">@(item.Profile ?? "-")</td>
                            <td class="log-col-input" title="@(item.SrcPath ?? "-")">@GetLogFileName(item.SrcPath)</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (_loadingMore)
            {
                <div class="log-list-loading">Loading...</div>
            }
            else if (_hasMore)
            {
                <div class="log-list-loading">Scroll to load more...</div>
            }
        </div>
    }

    @if (_detailVisible)
    {
        <div class="log-overlay" @onclick="CloseDetail">
            <div class="log-overlay-panel" @onclick:stopPropagation="true">
                <button class="log-overlay-close" type="button" @onclick="CloseDetail">×</button>
                <h4>ログ詳細</h4>
                @if (_detailLoading)
                {
                    <p>Loading detail...</p>
                }
                else if (!string.IsNullOrEmpty(_detailError))
                {
                    <p style="color: red;">@_detailError</p>
                }
                else if (_detail == null)
                {
                    <p>Select a log to view detail.</p>
                }
                else
                {
                    <div>
                        <div>@_detailTitle</div>
                        <div>Size: @_detail.Meta?.Size @if (_detail.Meta?.TooLarge == true) { <span>(truncated)</span> }</div>
                        <pre class="log-detail">@(_detail.Content ?? "")</pre>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    private readonly List<CheckLogItemView> _checkLogs = new();
    private string? _error;
    private bool _loading = true;
    private bool _loadingMore;
    private int _offset;
    private int _total;
    private const int PageSize = 50;
    private ElementReference _listRef;
    private LogFileContent? _detail;
    private string? _detailTitle;
    private string? _detailError;
    private bool _detailLoading;
    private bool _detailVisible;

    protected override Task OnInitializedAsync() => ReloadAsync();

    private async Task ReloadAsync()
    {
        _loading = true;
        _error = null;
        _checkLogs.Clear();
        _offset = 0;
        _total = 0;
        await LoadMoreAsync();
        _loading = false;
    }

    private bool _hasMore => _checkLogs.Count < _total || _total == 0;

    private async Task LoadMoreAsync()
    {
        if (_loadingMore)
        {
            return;
        }
        _loadingMore = true;
        var checkRes = await Api.GetCheckLogsPageAsync(_offset, PageSize);
        if (!checkRes.Ok)
        {
            _error = checkRes.Error ?? "Failed to load check logs.";
        }
        else if (checkRes.Data != null)
        {
            _total = checkRes.Data.Total;
            if (checkRes.Data.Items.Count > 0)
            {
                _checkLogs.AddRange(checkRes.Data.Items);
                _offset += checkRes.Data.Items.Count;
            }
        }
        _loadingMore = false;
    }

    private async Task OnScrollAsync()
    {
        if (_loading || _loadingMore || !_hasMore)
        {
            return;
        }
        var info = await Js.InvokeAsync<ScrollInfo>("amatsukazeUi.getScrollInfo", _listRef);
        if (info.Remaining < 120)
        {
            await LoadMoreAsync();
        }
    }

    private sealed class ScrollInfo
    {
        public double ScrollTop { get; set; }
        public double ScrollHeight { get; set; }
        public double ClientHeight { get; set; }
        public double Remaining { get; set; }
    }

    private async Task LoadCheckDetailAsync(CheckLogItemView item)
    {
        await LoadDetailAsync(null, item.CheckStartDate, item.SrcPath ?? "Check Log");
    }

    private static string GetLogFileName(string? path)
    {
        if (string.IsNullOrWhiteSpace(path))
        {
            return "-";
        }
        return Path.GetFileName(path);
    }

    private async Task LoadDetailAsync(DateTime? encodeStart, DateTime? checkStart, string title)
    {
        _detailLoading = true;
        _detailError = null;
        _detailTitle = title;
        _detail = null;
        _detailVisible = true;

        var res = await Api.GetLogFileAsync(encodeStart, checkStart);
        if (!res.Ok)
        {
            _detailError = res.Error ?? "Failed to load log detail.";
        }
        else
        {
            _detail = res.Data;
        }
        _detailLoading = false;
    }

    private void CloseDetail()
    {
        _detailVisible = false;
    }
}
