@page "/logs/encode"
@using Amatsukaze.Shared
@inject IAmatsukazeApi Api

<h3>Encode Logs</h3>

<p>
    <button class="btn btn-primary" @onclick="ReloadAsync" disabled="@_loading">Reload</button>
</p>

@if (_loading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(_error))
{
    <p style="color: red;">@_error</p>
}
else
{
    @if (_encodeLogs.Count == 0)
    {
        <p>No encode logs.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Start</th>
                    <th>Finish</th>
                    <th>Result</th>
                    <th>Service</th>
                    <th>Source</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _encodeLogs)
                {
                    <tr>
                        <td>@(item.DisplayEncodeStart ?? "-")</td>
                        <td>@(item.DisplayEncodeFinish ?? "-")</td>
                        <td>@(item.DisplayResult ?? (item.Success ? "Success" : "Fail"))</td>
                        <td>@(item.DisplayService ?? item.ServiceName ?? "-")</td>
                        <td>@(item.SrcPath ?? "-")</td>
                        <td><button class="btn btn-sm btn-outline-secondary" @onclick="() => LoadEncodeDetailAsync(item)">View</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h4>Log Detail</h4>
    @if (_detailLoading)
    {
        <p>Loading detail...</p>
    }
    else if (!string.IsNullOrEmpty(_detailError))
    {
        <p style="color: red;">@_detailError</p>
    }
    else if (_detail == null)
    {
        <p>Select a log to view detail.</p>
    }
    else
    {
        <div>
            <div>@_detailTitle</div>
            <div>Size: @_detail.Meta?.Size @if (_detail.Meta?.TooLarge == true) { <span>(truncated)</span> }</div>
            <pre style="background: #f7f7f7; padding: 0.5rem; white-space: pre-wrap;">@(_detail.Content ?? "")</pre>
        </div>
    }
}

@code {
    private readonly List<LogItemView> _encodeLogs = new();
    private string? _error;
    private bool _loading = true;
    private LogFileContent? _detail;
    private string? _detailTitle;
    private string? _detailError;
    private bool _detailLoading;

    protected override Task OnInitializedAsync() => ReloadAsync();

    private async Task ReloadAsync()
    {
        _loading = true;
        _error = null;
        _encodeLogs.Clear();

        var encodeRes = await Api.GetEncodeLogsAsync();
        if (!encodeRes.Ok)
        {
            _error = encodeRes.Error ?? "Failed to load encode logs.";
        }
        else if (encodeRes.Data != null)
        {
            _encodeLogs.AddRange(encodeRes.Data);
        }

        _loading = false;
    }

    private async Task LoadEncodeDetailAsync(LogItemView item)
    {
        await LoadDetailAsync(item.EncodeStartDate, null, item.SrcPath ?? "Encode Log");
    }

    private async Task LoadDetailAsync(DateTime? encodeStart, DateTime? checkStart, string title)
    {
        _detailLoading = true;
        _detailError = null;
        _detailTitle = title;
        _detail = null;

        var res = await Api.GetLogFileAsync(encodeStart, checkStart);
        if (!res.Ok)
        {
            _detailError = res.Error ?? "Failed to load log detail.";
        }
        else
        {
            _detail = res.Data;
        }
        _detailLoading = false;
    }
}
